<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.PasswordField?>
<BorderPane prefHeight="274.0" prefWidth="500.0" styleClass="app" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="main.java.Controllers.Password">
    <stylesheets>
        <URL value="@../css/main.css" />
    </stylesheets>
    <center>
      <VBox prefHeight="343.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="500.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Current Password" textAlignment="RIGHT" wrappingWidth="150.0">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin></Text>
                  <PasswordField fx:id="currentPwd" prefHeight="25.0" prefWidth="320.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="New Password" textAlignment="RIGHT" wrappingWidth="150.0">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin></Text>
                  <PasswordField fx:id="newPwd" prefHeight="25.0" prefWidth="320.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Confirm Password" textAlignment="RIGHT" wrappingWidth="150.0">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin></Text>
                  <PasswordField fx:id="confirmPwd" prefWidth="320.0" />
               </children>
            </HBox>
         </children></VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
          <Button onAction="#onSaveNewPassword" mnemonicParsing="false" prefHeight="36.0" prefWidth="90.0" text="Save">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin></Button>
            <Button onAction="#onCancel" mnemonicParsing="false" prefHeight="36.0" prefWidth="90.0" text="Cancel">
               <HBox.margin>
                  <Insets left="5.0" right="15.0" />
               </HBox.margin></Button>
         </children></HBox>
   </bottom>
</BorderPane>
