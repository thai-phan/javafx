<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="250.0" prefWidth="500.0" styleClass="app" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.Controllers.ScheduleDateController">
    <stylesheets>
        <URL value="@../css/main.css" />
    </stylesheets>
    <center>
      <HBox alignment="CENTER_LEFT" prefHeight="183.0" prefWidth="480.0" BorderPane.alignment="CENTER">
         <children>
            <DatePicker fx:id="scheduleDate" prefHeight="37.0" prefWidth="547.0" />
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="54.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onSaveScheduleDate" prefHeight="34.0" prefWidth="90.0" text="Save">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#onCancelScheduleDate" prefHeight="34.0" prefWidth="90.0" text="Cancel">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin></Button>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Select date to run schedule" />
         </children>
      </HBox>
   </top>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</BorderPane>
